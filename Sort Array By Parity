class Solution {
    public int[] sortArrayByParity(int[] A) {
        
        int[] a = new int[A.length];
        
        int i = 0;
        
        for(int j1=0;j1<A.length;j1++){
            if(A[j1]%2 == 0){
                a[i] = A[j1];
                i++;
            }
        }
        
        for(int j2=0;j2<A.length;j2++){
            if(A[j2]%2 == 1){
                a[i]=A[j2];
                i++;
            }
        }
        
        return a;
        
    }
}
