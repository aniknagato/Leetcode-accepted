class Solution {
    public boolean isPalindrome(int x) {
        
        if (x<0){
            return false;
        }
        
        int i =0;
        
        int y = x;
        
        while(x>0){
            i = i*10 + x% 10;
            x = x/10;
        }
        return i==y;
        
        
    }
}
